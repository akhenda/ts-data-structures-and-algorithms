{
  "extends": "@hendacorp/typescript-configs/node.base",
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@a/*": ["src/algorithms/*"],
      "@ds/*": ["src/data-structures/*"]
    }
  },
  "files": ["global.d.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tmp", "build", "dist"]
}
